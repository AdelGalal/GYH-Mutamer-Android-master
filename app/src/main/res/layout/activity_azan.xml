<RelativeLayout android:id="@+id/azan_layout"

                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <com.gama.mutamer.libs.PanningView
        android:id="@+id/backgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/daypan"
        custom:panningDurationInMs="40000"/>

    <com.gama.mutamer.libs.PanningView
        android:id="@+id/backgroundNightView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src=" @drawable/nightpan"
        custom:panningDurationInMs="60000"/>


    <ImageView
        android:id="@+id/mosque_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/azan"
        android:scaleType="centerCrop"
        android:src="@drawable/adhan"/>

    <TextView
        android:id="@+id/text_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/text_azan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/text_city_name"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

</RelativeLayout>