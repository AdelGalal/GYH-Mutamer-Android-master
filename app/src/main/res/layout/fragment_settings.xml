<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        >


        <LinearLayout
            android:id="@+id/llLanguage"
            style="@style/settingCard">

            <ImageView
                style="@style/settingsIcon"
                android:src="@drawable/ic_setting_language"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/settingTitle"
                    android:text="@string/language"/>

                <TextView
                    android:id="@+id/tvLanguage"
                    tools:text="Value will be here"
                    style="@style/settingValue"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llUnits"
            style="@style/settingCard">

            <ImageView
                style="@style/settingsIcon"

                android:src="@drawable/ic_ruler"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/units"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/tvUnits"
                    tools:text="Value will be here"
                    style="@style/settingValue"/>
            </LinearLayout>
        </LinearLayout>





        <LinearLayout
            android:id="@+id/llAzanCalculationMethod"
            style="@style/settingCard">

            <ImageView
                style="@style/settingsIcon"

                android:src="@drawable/ic_timelapse"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView

                    style="@style/settingTitle"
                    android:text="@string/azan_calculation_method"
                    />

                <TextView
                    android:id="@+id/tvPrayCalcType"
                    tools:text="Value will be here"
                    style="@style/settingValue"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/llAzanNotificationType"
            style="@style/settingCard">

            <ImageView
                style="@style/settingsIcon"

                android:src="@drawable/ic_notifications_active"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/settingTitle"
                    android:text="@string/pray_notification"/>

                <TextView
                    android:id="@+id/tvNotificationType"
                    tools:text="Value will be here"
                    style="@style/settingValue"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</ScrollView>
